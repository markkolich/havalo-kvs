<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
	<display-name>Havalo</display-name>
	<description>A zero configuration, non-distributed key-value store.</description>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>havalo.root</param-value>
	</context-param>
	
	<!--
		Disable the use of session cookies.  This turns off the setting
		of the typical "JSESSIONID" session cookies.  Seems to only apply
		to Tomcat, does nothing in Jetty.
	-->
	<session-config>
		<tracking-mode>URL</tracking-mode>
	</session-config>
	
	<listener>
		<listener-class>com.kolich.havalo.HavaloServletContextBootstrap</listener-class>
	</listener>
		
	<servlet>
		<servlet-name>AuthenticateAPI</servlet-name>
		<servlet-class>com.kolich.havalo.servlets.api.AuthenticateAPI</servlet-class>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthenticateAPI</servlet-name>
		<url-pattern>/api/authenticate</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>HavaloAuthenticationFilter</filter-name>
		<filter-class>com.kolich.havalo.authentication.HavaloAuthenticationFilter</filter-class>
		<async-supported>true</async-supported>
	</filter>
    <filter-mapping>
		<filter-name>HavaloAuthenticationFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>ASYNC</dispatcher>
	</filter-mapping>

	<error-page>
		<error-code>400</error-code>
		<location>/WEB-INF/jsp/errors/400-bad-request.jsp</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/WEB-INF/jsp/errors/401-unauthorized.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/errors/404-not-found.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/errors/500-internal-server-error.jsp</location>
	</error-page>
	
</web-app>
